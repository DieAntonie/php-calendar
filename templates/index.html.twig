<!doctype html>
<html lang="{{ locale }}">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>{{ calendar.getTitle }}</title>
	<link rel="icon" href="static/office-calendar.png">
	<link rel="stylesheet" href="static/phpc.css">
	<script defer src="https://use.fontawesome.com/releases/v5.0.4/js/all.js"></script>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.7.1/remarkable.min.js"
		integrity="sha256-ltAts6+/XysEs9E5RF/t0H+0eD3ET6NpbqzshWkqeic=" crossorigin="anonymous"></script>
	<script src="static/phpc.js"></script>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		{% if calendars|length > 1 %}
		<div class="nav-item dropdown">
			<a href="#" class="navbar-brand dropdown-toggle" id="phpcTitle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ calendar.getTitle }}</a>
			<div class="dropdown-menu" aria-labelledby="phpcTitle">
			{% for cal in calendars %}
				<a class="dropdown-item" href="{{ script }}?phpcid={{ cal.getCid }}">{{ cal.getTitle }}</a>
			{% endfor %}
			</div>
		</div>
		{% else %}
			<a href="{{ context.createUrl() }}" class="navbar-brand">{{ calendar.getTitle }}</a>
		{% endif %}
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#phpc-navbar"
				aria-controls="phpc-navbar" aria-expanded="false" aria-label="Toggle navigation">
    		<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="phpc-navbar">
			<ul class="navbar-nav mr-auto">
				{% if calendar.canWrite(user) %}
					{{ menu_item(context, "event_form", "create-event-menu-link"|trans, 'plus') }}
				{% endif %}
				{{ menu_item(context, "display_month", "view-month-menu-link"|trans, 'eye') }}
				{% if action == "display_event" %}
					{{ menu_item(context, "display_day", "view-date-menu-link"|trans, 'eye') }}
				{% endif %}
				{% if user.isAdmin() or calendar.canAdmin(user) %}
					{{ menu_item(context, "admin", "admin-menu-link"|trans, 'cog') }}
				{% endif %}
				{% if not user.isUser() %}
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-language"></i> {{ "language-menu-selector"|trans({'%locale%': locale}) }}</a>
						<div class="dropdown-menu" aria-labelledby="langDropdown">
							{% for lang,code in languages %}
								<a class="dropdown-item" href="{{ append_parameter_url(context.request, "lang=" ~ code) }}">{{ lang }}</a>
							{% endfor %}
						</div>
					</li>
				{% endif %}
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user"></i> {{ user.getUsername() }}</a>
					<div class="dropdown-menu" aria-labelledby="userDropdown">
						<a class="dropdown-item" href="{{ context.createUrl("user_settings") }}"><i class="fas fa-cog"></i> {{ "settings-menu-link"|trans }}</a>
						{% if user.isUser() %}
						<a class="dropdown-item" href="{{ context.createUrl("logout") }}&amp;lasturl={{ query_string|url_encode }}"><i class="fas fa-sign-out-alt"></i> {{ "log-out-menu-link"|trans }}</a>
						{% else %}
						<a class="dropdown-item" href="{{ context.createUrl("login") }}&amp;lasturl={{ query_string|url_encode }}"><i class="fas fa-sign-in-alt"></i> {{ "log-in-menu-link"|trans }}</a>
						{% endif %}
					</div>
				</li>
			</ul>
			<form class="form-inline" action="{{ context.createUrl('search') }}" method="post">
				<div class="search-wrapper">
					<label class="search-label" for="search-input"><i class="fas fa-search"></i></label>
    				<input id="search-input" class="search-input" name="query" type="search"
						placeholder="{{ "search-label"|trans }}" aria-label="{{ "search-label"|trans }}">
					<button class="search-button" title="{{ "search-label"|trans }}" type="submit">
						<i class="fas fa-arrow-right"></i>
					</button>
				</div>
    		</form>
		</div>
	</nav>

	{% for message in messages %}
		<div class="alert alert-primary alert-dismissible fade show" role="alert">
  			{{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
    			<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endfor %}

	<div class="phpc-body container-fluid">
	{% block body %}{% endblock %}
	</div>

	{% if embed %}
	<script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"></script>
	<script src="static/embed.js"></script>
	{% endif %}
</body>
</html>
